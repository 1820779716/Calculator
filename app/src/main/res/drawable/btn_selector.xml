<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <stroke android:width="1px" android:color="@color/gray" /><!-- 描边，边框宽度、颜色 -->
            <solid android:color="@color/gray"></solid><!-- 矩形的填充色 -->
        </shape>
    </item>

    <item android:state_pressed="false">
        <shape>
            <stroke android:width="1px" android:color="@color/gray" /><!-- 描边，边框宽度、颜色 -->
            <solid android:color="@color/white"></solid><!-- 矩形的填充色 -->
        </shape>
    </item>
 </selector>