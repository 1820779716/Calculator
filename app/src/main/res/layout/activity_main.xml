<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="bottom"
    android:background="#FCFCFC"
    android:gravity="bottom"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="vertical">

            <TextView
                android:id="@+id/history"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="bottom|right"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/expression"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="bottom|right"
                android:textColor="#000000"
                android:textSize="35dp" />

            <TextView
                android:id="@+id/result"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="bottom|right"
                android:textColor="#000000"
                android:textSize="20dp" />
        </LinearLayout>

    </ScrollView>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:stretchColumns="*">

        <TableRow android:layout_weight="1">

            <Button
                android:id="@+id/AC"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/btn_selector"
                android:text="AC"
                android:textColor="@color/orange"
                android:textSize="20dp" />

            <Button
                android:id="@+id/Del"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/btn_selector"
                android:text="DEL"
                android:textColor="@color/orange"
                android:textSize="20dp" />

            <Button
                android:id="@+id/Mod"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/btn_selector"
                android:text="%"
                android:textColor="@color/orange"
                android:textSize="20dp" />

            <Button
                android:id="@+id/Div"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/btn_selector"
                android:text="/"
                android:textColor="@color/orange"
                android:textSize="20dp" />
        </TableRow>

        <TableRow android:layout_weight="1">

            <Button
                android:id="@+id/num_7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/btn_selector"
                android:text="7"
                android:textSize="20dp" />

            <Button
                android:id="@+id/num_8"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/btn_selector"
                android:text="8"
                android:textSize="20dp" />

            <Button
                android:id="@+id/num_9"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/btn_selector"
                android:text="9"
                android:textSize="20dp" />

            <Button
                android:id="@+id/Mul"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/btn_selector"
                android:text="*"
                android:textColor="@color/orange"
                android:textSize="20dp" />
        </TableRow>

        <TableRow android:layout_weight="1">

            <Button
                android:id="@+id/num_4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/btn_selector"
                android:text="4"
                android:textSize="20dp" />

            <Button
                android:id="@+id/num_5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/btn_selector"
                android:text="5"
                android:textSize="20dp" />

            <Button
                android:id="@+id/num_6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/btn_selector"
                android:text="6"
                android:textSize="20dp" />

            <Button
                android:id="@+id/Sub"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/btn_selector"
                android:text="-"
                android:textColor="@color/orange"
                android:textSize="20dp" />
        </TableRow>

        <TableRow android:layout_weight="1">

            <Button
                android:id="@+id/num_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/btn_selector"
                android:text="1"
                android:textSize="20dp" />

            <Button
                android:id="@+id/num_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/btn_selector"
                android:text="2"
                android:textSize="20dp" />

            <Button
                android:id="@+id/num_3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/btn_selector"
                android:text="3"
                android:textSize="20dp" />

            <Button
                android:id="@+id/Add"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/btn_selector"
                android:text="+"
                android:textColor="@color/orange"
                android:textSize="20dp" />
        </TableRow>

        <TableRow android:layout_weight="1">

            <Button
                android:id="@+id/num_0"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_span="2"
                android:background="@drawable/btn_selector"
                android:text="0"
                android:textSize="20dp" />

            <Button
                android:id="@+id/Doc"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/btn_selector"
                android:text="."
                android:textSize="20dp" />

            <Button
                android:id="@+id/Equal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/equal_selector"
                android:text="="
                android:textColor="@color/white"
                android:textSize="20dp" />
        </TableRow>
    </TableLayout>

</LinearLayout>